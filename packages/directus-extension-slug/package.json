{
	"name": "@Marje3PSUT/directus-extension-slug",
	"description": "This hook adds a slug field to the specified collections after each save and update.",
	"icon": "extension",
	"version": "1.0.8",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-hook"
	],
	"type": "module",
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.1.14"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/errors": "^0.2.0",
		"@directus/extensions-sdk": "10.1.14",
		"@types/node": "^20.8.10",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@sindresorhus/slugify": "^2.2.1"
	},
	"repository": "git@github.com:Marje3PSUT/psutarchive-directus-extensions.git"
}
